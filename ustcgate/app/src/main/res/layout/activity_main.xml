<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cheny.ustcgate.MainActivity">

    <TextView
        android:text="网络通账号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:id="@+id/IDtextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/IDeditText"
        android:layout_alignBaseline="@+id/IDtextView"
        android:layout_alignBottom="@+id/IDtextView"
        android:layout_toRightOf="@+id/IDtextView"
        android:layout_toEndOf="@+id/IDtextView" />

    <TextView
        android:text="密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/IDeditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/IDeditText"
        android:layout_alignLeft="@+id/IDeditText"
        android:layout_alignStart="@+id/IDeditText"
        android:layout_marginTop="10dp"
        android:id="@+id/PWeditText" />

    <CheckBox
        android:text="记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PWeditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/RestorePWcheckBox" />

    <TextView
        android:text="出口"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OuttextView"
        android:layout_below="@+id/RestorePWcheckBox"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RestorePWcheckBox"
        android:layout_toRightOf="@+id/IDtextView"
        android:layout_toEndOf="@+id/IDtextView"
        android:id="@+id/OutRadioGroup">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio1"
            android:text="教育网"
            android:checked="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio2"
            android:text="电信网"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio3"
            android:text="联通网"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio4"
            android:text="电信网2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio5"
            android:text="联通网2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio6"
            android:text="电信网3"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio7"
            android:text="联通网3"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio8"
            android:text="教育网2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outradio9"
            android:text="移动测试"/>
    </RadioGroup>

    <TextView
        android:text="时长"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TimetextView"
        android:layout_below="@+id/RestorePWcheckBox"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TimetextView"
        android:layout_toRightOf="@+id/TimetextView"
        android:layout_toEndOf="@+id/TimetextView"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:id="@+id/radioGroup">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Timeradio1"
            android:text="1小时"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Timeradio2"
            android:text="4小时"
            android:checked="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Timeradio3"
            android:text="11小时"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Timeradio4"
            android:text="14小时"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Timeradio5"
            android:text="永久"/>
    </RadioGroup>

    <Button
        android:text="连接"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Connectbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Connectbutton"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_marginBottom="34dp"
        android:id="@+id/ResponseTextView" />
</RelativeLayout>
